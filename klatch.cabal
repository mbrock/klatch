                 transformers,
                 mtl,
                 text,
                 stm,
                 containers,
                 exceptions,
                 bytestring,
                 unix,
                 uuid,
                 time,
                 scotty,
                 aeson,
                 amqp,
                 pipes,
                 pipes-network,
                 pipes-concurrency,
                 pipes-bytestring,
                 pipes-parse,
                 network-simple,
                 ghc-prim,
                 async,
                 optparse-applicative,
                 hslogger,
                 old-locale,
                 hscolour,
                 directory,
                 irc-bytestring,
                 attoparsec,
                 warp,
                 wai,
                 wai-extra,
                 wai-eventsource,
                 http-types,
                 blaze-builder,
                 conduit,
                 wai-middleware-static,
                 QuickCheck,
                 unordered-containers

